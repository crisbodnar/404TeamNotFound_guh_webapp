extends layout
block content
	div.container
		div.jumbotron
			div.row
				div.col-md-12
					h2 Game Score Board
			div.row
				each val, index in names
					div(class=('col-md-'+width)) 
						p(id = ("name"+(index+1)))= val
			div.row
				each val, index in scores
					div(class=('col-md-'+width))
						p(id = ("score"+(index+1)))= val
			div.row
				p#invite.invitation-link
	a(href='http://www.justgiving.com/4w350m3/donation/direct/charity/185820/?amount=2.00&exitUrl=http%3A%2F%2Flocalhost%3A3000%2Fjustgiving%3FjgDonationId%3DJUSTGIVING-DONATION-ID&currency=GBP&reference=1234&defaultMessage=I%20lost%20the%20basketball%20match&utm_source=sdidirect&utm_medium=buttons&utm_campaign=buttontype') 
		img(src='http://pages.justgiving.com/developer/ui-2013/devportal/img/give-button.png', alt='Give with JustGiving')


	script(src='http://localhost:3000/socket.io/socket.io.js')
	script(src='/js/socket.js')